<%= render partial: "topbar/default", locals: {active_button: "register"} %>
<div class="container jumbotron">
	<div class="row">
		<div class="col-md-6 col-md-offset-1">
			<h2>
				Cadastro de Usuário:
			</h2>
		<% if @validate[:name] == 1 %>

			<div class="row">
				<div class = "col-md-12">
					<div class="alert alert-danger" role="alert">
						Você esqueceu de colocar o <strong>nome</strong>!
					</div>
				</div>
			</div>
		<% end %>

		<% if @validate[:email] == 1 %>
			<div class="row">
				<div class = "col-md-12">
					<div class="alert alert-danger" role="alert">
						Você não colocou o seu <strong>e-mail</strong>!
					</div>
				</div>
			</div>
		<% end %>

		<% if @validate[:password] == 1 %>
			<div class="row">
				<div class = "col-md-12">
					<div class="alert alert-danger" role="alert">
						Você não escreveu a sua <strong>senha</strong>!
					</div>
				</div>
			</div>
		<% end %>

			<% if @erro == true %>
				<div class="alert alert-danger" role="alert">
					<strong>Erro!</strong>
					Já existe um usuário com este e-mail registrado.
				</div>
			<% end %>
			<%= form_for :user_form, :html => {:class => "form-horizontal"}, url: users_new_path do |u| %>
				<div class="form-group">
					<%= u.label :name, "Nome", class: "col-md-2 control-label" %>
			        <div class="col-md-10">
			          <%= u.text_field :name, class: "form-control", placeholder: "Nome" %>
			        </div>
				</div>
				<div class="form-group <% if @erro == true %>has-error<%end%>">
					<%= u.label :email, "Email", class: "col-md-2 control-label" %>
			        <div class="col-md-6">
			          <%= u.email_field :email, class: "form-control", placeholder: "Email" %>
			        </div>
				</div>
				<div class="form-group">
					<%= u.label :password, "Senha", class: "col-md-2 control-label" %>
			        <div class="col-md-6">
			          <%= u.password_field :password, class: "form-control", placeholder: "Senha" %>
			        </div>
				</div>
				<div class="form-group">
				    <div class="col-md-offset-2 col-md-10">
						<%= u.submit :'Cadastrar', class: "btn btn-primary btn-lg" %>
				    </div>
				</div>
			<% end %>
