<%= render "topbar/default" %>

<div>
  <h1 style = "margin-bottom: 7%; text-align: center; font-size: 5em;">MeuMédico.com</h1>
</div>

<div class = "container-fluid well">
  <%= form_for :search_form, :html => {:class => "form-horizontal"}, url: doctors_results_path do |s| %>
  <div class = "row">
    <div class= "col-md-2 col-md-offset-2">
      <h4><strong>Especialidade</strong></h4>
    </div>

    <div class= "col-md-2">
      <h4><strong>Plano de Saúde</strong></h4>
    </div>

    <div class= "col-md-2">
      <h4><strong>Bairro</strong></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-md-offset-2">
      <%= select_tag(:specialty, options_for_select([['---', ''],['Cardiologia', 'cardiologia'], ['Pediatria', 'Pediatria'], ['Ginecologia', 'Ginecologia']]), { :class=>"form-control input-lg", :style=>"margin-bottom: 30%;"}) %>
    </div>

    <div class="col-md-2">
      <%= select_tag(:healthPlans, options_for_select([['---', ''],['Unimed', 'Unimed'], ['Bradesco', 'Bradesco'], ['Golden Cross', 'Golden Cross'], ['Amil', 'Amil']]), { :class=>"form-control input-lg", :style=>"margin-bottom: 30%;"}) %>
    </div>

    <div class="col-md-2">
      <%= select_tag(:neighborhood, options_for_select([['---', ''],['Barra da Tijuca', 'Barra da Tijuca'], ['Tijuca', 'Tijuca'], ['Leblon', 'Leblon'], ['Madureira', 'Madureira']]), { :class=>"form-control input-lg", :style=>"margin-bottom: 30%;"}) %>
    </div>

    <%= s.submit :'Buscar', { :class=>"btn btn-primary btn-lg" } %>
  </div>

  <% end %> 

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
        <%= form_for :search_form, :html => {:class => "form-horizontal"}, url: doctors_results_path do |s| %>
	<h4>
		<strong>
			Procurar pelo Nome:
		</strong>
	</h4>
	<div class="input-group">
		<%= s.text_field :name, class: "form-control input-lg" %>
		<span class="input-group-btn">
			<%= s.submit :'Buscar', { :class=>"btn btn-primary btn-lg" } %>
		</span>
	</div>

          <% end %> 
    </div>

  </div>

</div>