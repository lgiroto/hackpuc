<%= render partial: "topbar/default", locals: {active_button: "none"} %>

<div class="container" >
	<div class = "container-fluid">
  <%= form_for :search_form, :html => {:class => "form-horizontal"}, url: doctors_results_path do |s| %>
  <div class = "row">
    <div class= "col-md-2">
      <h4><strong>Especialidade</strong></h4>
      <%= select_tag(:specialty, options_for_select([['---', ''],['Cardiologia', 'Cardiologista'], ['Pediatria', 'Pediatria'], ['Ginecologia', 'Ginecologia']]), { :class=>"form-control input-lg", :style=>"margin-bottom: 10%;"}) %>
    </div>

    <div class= "col-md-2">
      <h4><strong>Plano de Sa√∫de</strong></h4>
      <%= select_tag(:healthPlans, options_for_select([['---', ''],['Unimed', 'Unimed'], ['Bradesco', 'Bradesco'], ['Golden Cross', 'Golden Cross'], ['Amil', 'Amil']]), { :class=>"form-control input-lg", :style=>"margin-bottom: 10%;"}) %>
    </div>

    <div class= "col-md-2">
      <h4><strong>Bairro</strong></h4>
      <%= select_tag(:neighborhood, options_for_select([['---', ''],['Barra da Tijuca', 'Barra da Tijuca'], ['Tijuca', 'Tijuca'], ['Leblon', 'Leblon'], ['Madureira', 'Madureira']]), { :class=>"form-control input-lg", :style=>"margin-bottom: 10%;"}) %>
    </div>

    <div class="col-md-2" >
    	<br><br>
    	<%= s.submit :'Buscar', { :class=>"btn btn-primary btn-lg" } %>
	</div>

  <% end %> 

    <div class="col-md-4">
        <%= form_for :search_form, :html => {:class => "form-horizontal"}, url: doctors_results_path do |s| %>
				<h4>
					<strong>
						Procurar pelo Nome:
					</strong>
				</h4>
				<div class="input-group">
					<%= s.text_field :name, class: "form-control input-lg" %>
					<span class="input-group-btn">
						<%= s.submit :'Buscar', { :class=>"btn btn-primary btn-lg" } %>
					</span>
				</div>

          <% end %> 
    </div>
  </div>
</div>

</div>
<div class="container jumbotron" style="background-color: rgba(255,255,255,1);">
	<% if @doctorsResults.empty? %>
	<div class="panel panel-default">
		<div class="panel-body">
			<h2 class="text-center">
			    <span class="glyphicon glyphicon-search"></span>
				Oops... Nenhum Resultado Encontrado
			</h2>
		</div>
	</div>
	<% end %>

	<% @doctorsResults.each do |doctor| %>
		<div class=" col-md-offset-1 col-md-4 well" >

		<div class="col-md-10" >
	      <h4>
	      	<%= doctor.name %>
	      </h4>
	      <h5>
	      	<span style="font-weight:bold;" >Especialidade:</span>
	      	<%= doctor.specialty %>
	      </h5>
	      <h5>
	      	<span class="glyphicon glyphicon-map-marker"></span>
	      	<%= doctor.city %>, <%= doctor.neighborhood %>,
	      	<%= doctor.address %>
	      </h5>
	      <h5>
	      	<span class="glyphicon glyphicon-envelope"></span>
	      	<%= doctor.email %>
	      </h5>
	  	</div>
		<div class="col-md-12" >
	      <%= link_to "Mais <span class='glyphicon glyphicon glyphicon-plus'></span>".html_safe, doctors_doctorDetails_path(doctor), { :class=>"btn btn-info btn-block"} %>
		</div>
		</div>
	<% end %>
</div>

