<%= render "topbar/default" %>

<div class="container">
	<div class="panel panel-default">
		<div class="panel-body">
			<div class="row">
				<div class="col-md-6 col-md-offset-1">
					<h1>
						Cadastro de Usuário:
					</h1>
					<div class="alert alert-success" role="alert">
						<strong>Sucesso!</strong>
						Seu cadastro foi realizado com sucesso!
					</div>
					<form class="form-horizontal" role="form">
					<div class="form-group">
						<label class="col-sm-3 control-label">Nome</label>
						<div class="col-sm-9">
							<p class="form-control-static">
								<%= @doctor.name %>
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">Email</label>
						<div class="col-sm-9">
							<p class="form-control-static">
								<%= @doctor.email %>
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">Senha</label>
						<div class="col-sm-9">
							<p class="form-control-static">
								**********
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">CRM</label>
						<div class="col-sm-9">
							<p class="form-control-static">
								<%= @doctor.crm %>
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">Cidade</label>
						<div class="col-sm-9">
							<p class="form-control-static">
								<%= @doctor.city %>
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">Bairro</label>
						<div class="col-sm-9">
							<p class="form-control-static">
								<%= @doctor.neighborhood %>
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">Endereço</label>
						<div class="col-sm-9">
							<p class="form-control-static">
								<%= @doctor.address %>
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">Plano de Saúde</label>
						<div class="col-sm-9">
							<p class="form-control-static">
								<%= @doctor.healthPlans %>
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">Especialidade:</label>
						<div class="col-sm-9">
							<p class="form-control-static">
								<%= @doctor.specialty %>
							</p>
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-offset-2 col-md-10">
          					<%= link_to "Retornar à Página Inicial", home_index_path, {:class => "btn btn-success btn-lg"} =%>
						</div>
					</div>
					</form>
			</div>
		</div>
	</div>
</div>

